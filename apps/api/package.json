    "svg-captcha": "catalog:api_prod",
    "systeminformation": "catalog:api_prod",
    "typeorm": "catalog:api_prod",
    "uuid": "catalog:cli",
    "winston": "catalog:api_prod",
    "winston-daily-rotate-file": "catalog:api_prod",
    "winston-mongodb": "catalog:api_prod"
  },
  "devDependencies": {
    "@configs/eslint-config": "workspace:*",
    "@nestjs/cli": "catalog:api_dev",
    "@nestjs/schematics": "catalog:api_dev",
    "@nestjs/testing": "catalog:api_dev",
    "@packages/generators": "workspace:*",
    "@swc/core": "catalog:",
    "@swc/jest": "catalog:",
    "@types/cookie-parser": "catalog:api_dev",
    "@types/crypto-js": "catalog:cli",
    "@types/etag": "catalog:api_dev",
    "@types/express": "catalog:api_dev",
    "@types/hbs": "catalog:api_dev",
    "@types/jest": "catalog:api_dev",
    "@types/lodash-es": "catalog:cli",
    "@types/multer": "catalog:api_dev",
    "@types/node": "catalog:cli",
    "@types/nodemailer": "catalog:api_dev",
    "@types/redis-errors": "catalog:api_dev",
    "@types/supertest": "catalog:api_dev",
    "copy-webpack-plugin": "catalog:api_dev",
    "eslint": "catalog:cli",
    "globals": "catalog:api_dev",
    "jest": "catalog:api_dev",
    "nestjs-spelunker": "catalog:api_dev",
    "plop": "catalog:cli",
    "prettier": "catalog:cli",
    "run-script-webpack-plugin": "catalog:api_dev",
    "source-map-support": "catalog:api_dev",
    "supertest": "catalog:api_dev",
    "swc-loader": "catalog:",
    "thread-loader": "catalog:",
    "ts-jest": "catalog:api_dev",
    "ts-loader": "catalog:api_dev",
    "ts-node": "catalog:api_dev",
    "tsconfig-paths": "catalog:api_dev",
    "typescript": "catalog:cli",
    "webpack": "catalog:api_dev",
    "webpack-bundle-analyzer": "catalog:api_dev",
    "webpack-node-externals": "catalog:api_dev"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s?$": [
        "@swc/jest"
      ]
    },
    "transformIgnorePatterns": [],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/$1"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
