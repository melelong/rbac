{
  "name": "@apps/api",
  "version": "0.0.1",
  "private": true,
  "packageManager": "pnpm@9.5.0",
  "engines": {
    "node": ">=20.19.2"
  },
  "scripts": {
    "g:swag": "ts-node src/generate-metadata.ts",
    "g:bm": "plop --plopfile plopfile.mjs \"bm\"",
    "g:eslint": "eslint",
    "g:format": "prettier",
    "clear:modules": "if exist node_modules (rmdir /s /q node_modules)",
    "clear:dist": "if exist dist (rmdir /s /q dist)",
    "clear:logs": "if exist logs (rmdir /s /q logs)",
    "clear": "pnpm clear:dist && pnpm clear:logs && pnpm clear:modules",
    "build": "nest build",
    "format:fix": "prettier --write \"{src,apps,test,libs}/**/*.{ts,cjs,mjs,js,md,html,css,md,json}\"",
    "format": "prettier --check \"{src,apps,test,libs}/**/*.{ts,cjs,mjs,js,md,html,css,md,json}\"",
    "eslint:fix": "eslint \"{src,apps,test,libs}/**/*.{ts,cjs,mjs,js}\" --fix",
    "eslint": "eslint \"{src,apps,test,libs}/**/*.{ts,cjs,mjs,js}\"",
    "lint:fix": "pnpm format:fix && pnpm eslint:fix",
    "lint": "pnpm format && pnpm eslint",
    "start": "nest start",
    "dev": "cross-env ENV_NAME=dev nest build --webpack --webpackPath webpack-hmr.config.cjs --watch",
    "pm2:start": "pnpm build && cross-env pm2_home=.pm2 pm2 start ecosystem.config.js",
    "pm2:stop": "cross-env pm2_home=.pm2 pm2 stop ecosystem.config.js",
    "pm2:restart": "cross-env pm2_home=.pm2 pm2 restart ecosystem.config.js",
    "pm2:reload": "cross-env pm2_home=.pm2 pm2 reload ecosystem.config.js",
    "pm2:delete": "cross-env pm2_home=.pm2 pm2 delete ecosystem.config.js",
    "pm2:del": "pnpm pm2:stop && pnpm pm2:delete && cross-env PM2_HOME=.pm2 pm2 kill && pnpm clear:dist && pnpm clear:logs",
    "pm2:list": "cross-env pm2_home=.pm2 pm2 list",
    "pm2:logs": "cross-env pm2_home=.pm2 pm2 logs",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@keyv/valkey": "catalog:api_prod",
    "@nest-lab/throttler-storage-redis": "catalog:api_prod",
    "@nestjs-modules/mailer": "catalog:api_prod",
    "@nestjs/axios": "catalog:api_prod",
    "@nestjs/bullmq": "catalog:api_prod",
    "@nestjs/cache-manager": "catalog:api_prod",
    "@nestjs/common": "catalog:api_prod",
    "@nestjs/config": "catalog:api_prod",
    "@nestjs/core": "catalog:api_prod",
    "@nestjs/cqrs": "catalog:api_prod",
    "@nestjs/event-emitter": "catalog:api_prod",
    "@nestjs/jwt": "catalog:api_prod",
    "@nestjs/mapped-types": "catalog:api_prod",
    "@nestjs/mongoose": "catalog:api_prod",
    "@nestjs/passport": "catalog:api_prod",
    "@nestjs/platform-express": "catalog:api_prod",
    "@nestjs/schedule": "catalog:api_prod",
    "@nestjs/swagger": "catalog:api_prod",
    "@nestjs/terminus": "catalog:api_prod",
    "@nestjs/throttler": "catalog:api_prod",
    "@nestjs/typeorm": "catalog:api_prod",
    "@packages/types": "workspace:*",
    "@scalar/nestjs-api-reference": "catalog:api_prod",
    "axios": "catalog:cli",
    "bullmq": "catalog:api_prod",
    "cache-manager": "catalog:api_prod",
    "cacheable": "catalog:api_prod",
    "chalk": "catalog:api_prod",
    "class-transformer": "catalog:api_prod",
    "class-validator": "catalog:api_prod",
    "cookie-parser": "catalog:api_prod",
    "cross-env": "catalog:api_prod",
    "crypto-js": "catalog:cli",
    "csrf-csrf": "catalog:api_prod",
    "dayjs": "catalog:cli",
    "etag": "catalog:api_prod",
    "hbs": "catalog:api_prod",
    "helmet": "catalog:api_prod",
    "ioredis": "catalog:api_prod",
    "iovalkey": "catalog:api_prod",
    "joi": "catalog:api_prod",
    "jsencrypt": "catalog:cli",
    "keyv": "catalog:api_prod",
    "lodash-es": "catalog:cli",
    "mongoose": "catalog:api_prod",
    "mysql2": "catalog:api_prod",
    "nest-winston": "catalog:api_prod",
    "nestjs-cls": "catalog:api_prod",
    "nodemailer": "catalog:api_prod",
    "passport": "catalog:api_prod",
