{
  "name": "rbac",
  "type": "module",
  "version": "0.0.1",
  "packageManager": "pnpm@9.5.0",
  "description": "MeltTeam-rbac",
  "author": "MeltTeam",
  "license": "MIT",
  "keywords": [
    "rbac"
  ],
  "main": "index.js",
  "engines": {
    "node": ">=20.19.2",
    "pnpm": ">=9.5.0"
  },
  "scripts": {
    "git:add": "git add .",
    "git:commit": "cz",
    "ri": "pnpm cls && pnpm i",
    "cls": "turbo clear && pnpm cls:modules && pnpm cls:lock",
    "cls:modules": "if exist node_modules (rmdir /s /q node_modules)",
    "cls:lock": "if exist pnpm-lock.yaml (del pnpm-lock.yaml)",
    "dev:web": "pnpm --filter @apps/web dev",
    "build:web": "pnpm --filter @apps/web build",
    "dev:api": "pnpm --filter @apps/api dev",
    "build:api": "pnpm --filter @apps/api build",
    "docker:dev:start": "docker-compose -f docker-compose.dev.yml up -d --build",
    "docker:dev:stop": "docker-compose -f docker-compose.dev.yml stop",
    "docker:dev:del": "docker-compose -f docker-compose.dev.yml down --volumes",
    "lint-staged": "lint-staged",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "catalog:cli",
    "@commitlint/config-conventional": "catalog:cli",
    "@configs/commitizen-config": "workspace:*",
    "@configs/commitlint-config": "workspace:*",
    "@configs/eslint-config": "workspace:*",
    "@configs/prettier-config": "workspace:*",
    "@types/node": "catalog:cli",
    "commitizen": "catalog:cli",
    "cz-customizable": "catalog:cli",
    "eslint": "catalog:cli",
    "husky": "catalog:cli",
    "lint-staged": "catalog:cli",
    "turbo": "catalog:cli"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": ".cz-config.cjs"
    }
  }
}
